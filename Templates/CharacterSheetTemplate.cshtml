@model DnDAPI.Models.PlayerCharacter
@using System
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@Model.Name - Character Sheet</title>
    <style>
        body {
            font-family: 'Noto Sans', Arial, sans-serif;
            font-size: 12px;
            margin: 0;
            padding: 10px;
            background-color: #f5f5f5;
            color: #333;
        }
        h1 {
            font-family: 'Libre Baskerville', serif;
            font-size: 24px;
            text-align: center;
            margin: 0 0 10px 0;
            color: #58180D;
        }
        .sheet {
            display: grid;
            grid-template-columns: 25% 25% 50%;
            grid-gap: 10px;
            max-width: 900px;
            margin: 0 auto;
            background-color: white;
            padding: 15px;
            box-shadow: 0 0 10px rgba(0,0,0,0.2);
            border: 1px solid #ccc;
        }
        .section {
            border: 2px solid #58180D;
            padding: 5px 10px;
            border-radius: 5px;
            margin-bottom: 10px;
            background-color: #FFF;
        }
        .title {
            font-weight: bold;
            font-size: 14px;
            text-transform: uppercase;
            border-bottom: 1px solid #58180D;
            margin-bottom: 5px;
            color: #58180D;
        }
        .ability-block {
            border: 2px solid #58180D;
            text-align: center;
            margin-bottom: 10px;
            border-radius: 5px;
            padding: 3px;
        }
        .ability-block .label {
            font-weight: bold;
            font-size: 14px;
            color: #58180D;
            border-bottom: 1px solid #58180D;
            margin-bottom: 3px;
        }
        .ability-block .score {
            font-size: 20px;
            font-weight: bold;
        }
        .ability-block .modifier {
            font-size: 14px;
            background-color: #58180D;
            color: white;
            border-radius: 15px;
            width: 30px;
            margin: 3px auto;
            padding: 1px;
        }
        ul {
            padding-left: 20px;
        }
        li {
            padding: 2px 0;
        }
    </style>
</head>
<body>
    <h1>Dungeons & Dragons Character Sheet</h1>
    <div class="sheet">
        <!-- Left Column -->
        <div>
            <div class="section">
                <div class="title">Character Name</div>
                @Model.Name
            </div>
            
            <div class="ability-block">
                <div class="label">Strength</div>
                <div class="score">@Model.Strength</div>
                <div class="modifier">@((Model.Strength - 10)/2 >= 0 ? "+" : "")@((Model.Strength - 10)/2)</div>
            </div>
            
            <div class="ability-block">
                <div class="label">Dexterity</div>
                <div class="score">@Model.Dexterity</div>
                <div class="modifier">@((Model.Dexterity - 10)/2 >= 0 ? "+" : "")@((Model.Dexterity - 10)/2)</div>
            </div>
            
            <div class="ability-block">
                <div class="label">Constitution</div>
                <div class="score">@Model.Constitution</div>
                <div class="modifier">@((Model.Constitution - 10)/2 >= 0 ? "+" : "")@((Model.Constitution - 10)/2)</div>
            </div>
            
            <div class="ability-block">
                <div class="label">Intelligence</div>
                <div class="score">@Model.Intelligence</div>
                <div class="modifier">@((Model.Intelligence - 10)/2 >= 0 ? "+" : "")@((Model.Intelligence - 10)/2)</div>
            </div>
            
            <div class="ability-block">
                <div class="label">Wisdom</div>
                <div class="score">@Model.Wisdom</div>
                <div class="modifier">@((Model.Wisdom - 10)/2 >= 0 ? "+" : "")@((Model.Wisdom - 10)/2)</div>
            </div>
            
            <div class="ability-block">
                <div class="label">Charisma</div>
                <div class="score">@Model.Charisma</div>
                <div class="modifier">@((Model.Charisma - 10)/2 >= 0 ? "+" : "")@((Model.Charisma - 10)/2)</div>
            </div>
            
            <div class="section">
                <div class="title">Saving Throws</div>
                <ul>
                    <li>Strength: @Model.SavingThrowStrength</li>
                    <li>Dexterity: @Model.SavingThrowDexterity</li>
                    <li>Constitution: @Model.SavingThrowConstitution</li>
                    <li>Intelligence: @Model.SavingThrowIntelligence</li>
                    <li>Wisdom: @Model.SavingThrowWisdom</li>
                    <li>Charisma: @Model.SavingThrowCharisma</li>
                </ul>
            </div>
        </div>
        
        <!-- Center Column -->
        <div>
            <div class="section">
                <div class="title">Class & Level</div>
                @Model.ClassType, Level @Model.Level
            </div>
            
            <div class="section">
                <div class="title">Combat</div>
                <div>Armor Class: @Model.ArmorClass</div>
                <div>Initiative: @Model.Initiative</div>
                <div>Speed: @Model.Speed</div>
                <div>HP: @Model.CurrentHitPoints / @Model.MaxHitPoints</div>
                <div>Hit Dice: @Model.HitDice</div>
            </div>
            
            <div class="section">
                <div class="title">Attacks</div>
                <ul>
                    @foreach (var atk in Model.Attacks)
                    {
                        <li><strong>@atk.Name</strong> - +@atk.AttackBonus, @atk.DamageDice</li>
                    }
                </ul>
            </div>
        </div>
        
        <!-- Right Column -->
        <div>
            <div class="section">
                <div class="title">Personality</div>
                <p>@Model.PersonalityTraits</p>
            </div>
            
            <div class="section">
                <div class="title">Equipment</div>
                <ul>
                    @foreach (var item in Model.Equipment.Split('\n'))
                    {
                        if (!string.IsNullOrWhiteSpace(item))
                        {
                            <li>@item</li>
                        }
                    }
                </ul>
            </div>
            
            <div class="section">
                <div class="title">Features</div>
                <p>@Model.FeaturesAndTraits</p>
            </div>
        </div>
    </div>
</body>
</html>